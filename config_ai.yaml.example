# AI and Playlist Generation Configuration
# Copy to config_ai.yaml and customize as needed

ai_analysis:
  enabled: true
  models_path: "./models"
  cache_results: true
  max_parallel: 2
  
  genre_classification:
    model: "genre_model_v1.pkl"
    confidence_threshold: 0.7
  
  mood_analysis:
    energy_buckets: 10
  
  lyrics_analysis:
    enabled: true
    import_lrc: true
    show_in_ui: false

playlist_generation:
  default_duration: 60  # minutes
  default_type: "hybrid"
  harmonic_weight: 0.6
  ai_weight: 0.4
  templates:
    - "warm_up"
    - "peak_time"
    - "closing"
  export_formats:
    - "m3u"
    - "serato_db"

serato_export:
  enabled: true
  root_path:
    macos: "~/Music/Serato"
    windows: "%USERPROFILE%/Music/Serato"
  crate_name: "MusicAnalyzerPro"
  write_database_v2: true
  create_crates: true
  write_file_tags: false

