# Environment Variables for Music Analyzer Pro
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# GitHub Integration
GITHUB_TOKEN=ghp-your-github-token-here

# Database Configuration
DB_PATH=./music_library.db
DB_BUSY_TIMEOUT_MS=5000

# Analysis Settings
ANALYSIS_MAX_CONCURRENT=4
ANALYSIS_TIMEOUT_SECONDS=30

# UI Settings
UI_GRID_PAGE_SIZE=40
UI_TOASTS_ENABLED=true
UI_TOAST_TIMEOUT_MS=2500

# Audio Processing
AUDIO_SAMPLE_RATE=44100
AUDIO_BUFFER_SIZE=4096

# Development Mode
DEBUG=false
LOG_LEVEL=INFO

# MixedInKey Integration
MIXEDINKEY_PRIORITY=true

# Paths
MUSIC_LIBRARY_PATH=~/Music
TEMP_DIR=/tmp/music_analyzer

# Feature Flags
ENABLE_AI_ENRICHMENT=true
ENABLE_VU_METER=true
ENABLE_HAMMS_ANALYSIS=true